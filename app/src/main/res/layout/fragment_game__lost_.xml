        android:layout_height="wrap_content"
        android:text="Proceed"
        android:id="@+id/proceed_button_lost"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

</RelativeLayout>
