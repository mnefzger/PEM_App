<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.pem.project.pem_app.Game_Run_Fragment"
    android:background="#ffadcfa5">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/runGame"
        android:visibility="invisible"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_foot"
            android:src="@drawable/left_foot"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/imageView11"
            android:layout_toLeftOf="@+id/imageView11"
            android:layout_toStartOf="@+id/imageView11"
            android:layout_marginRight="20dp"
            android:layout_marginTop="275dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_foot"
            android:src="@drawable/right_foot"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/left_foot"
            android:layout_alignLeft="@+id/runSpeed"
            android:layout_alignStart="@+id/runSpeed"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="210dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@drawable/left_foot"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/right_foot"
            android:layout_alignLeft="@+id/left_foot"
            android:layout_alignStart="@+id/left_foot"
            android:layout_marginRight="20dp"
            android:layout_marginTop="180dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/right_foot"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/imageView6"
            android:layout_alignLeft="@+id/runSpeed"
            android:layout_alignStart="@+id/runSpeed"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:src="@drawable/left_foot"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/imageView7"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignStart="@+id/imageView6"
            android:layout_marginRight="20dp"
            android:layout_marginTop="90dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:src="@drawable/left_foot"
            android:layout_gravity="center"
            android:layout_below="@+id/imageView8"
            android:layout_alignLeft="@+id/imageView9"
            android:layout_alignStart="@+id/imageView9"
            android:layout_marginRight="20dp"
            android:layout_marginTop="110dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:src="@drawable/right_foot"
            android:layout_gravity="center"
            android:layout_below="@+id/runSpeed"
            android:layout_alignLeft="@+id/runSpeed"
            android:layout_alignStart="@+id/runSpeed"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/runIndicator"
            android:src="@drawable/key_green_yes"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:alpha="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/runSpeed"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="593dp"
            android:layout_height="242dp"
            android:id="@+id/imageView5"
            android:src="@drawable/spider2"
            android:layout_below="@+id/runSpeed"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="0dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="The Monster"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal|top"
            android:gravity="center"
            android:background="#3E6617"
            android:textSize="30dp"
            android:textColor="#D5F6B8" />

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#304135"
        android:id="@+id/runInfoText">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_weight="0.6">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView13"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/spider_top"
                android:scaleType="centerCrop" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:background="#202d24"
                android:alpha="0.6">

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="THE MONSTER"
                        android:id="@+id/textView10"
                        android:textColor="#ff84ea29"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="SPEED"
                        android:id="@+id/textView11"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

            </TableRow>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_weight="0.4">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="RUN FOR YOUR LIFE!"
                android:id="@+id/textView8"
                android:paddingLeft="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#FF0066"
                android:layout_weight="0.05" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="You have woken a terrible monster from it's sleep!\nThe only way to come out of this alive is to run as fast as you can.\nYou can run by shaking your phone."
                android:id="@+id/textView7"
                android:gravity="left"
                android:textSize="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_weight="0.75" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0.2">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="70dp"
                        android:background="#202d24"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:id="@+id/startRun">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Start"
                            android:id="@+id/textView9"
                            android:background="#202d24"
                            android:layout_gravity="bottom|center_horizontal"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:textColor="#ff84ea29"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="70dp"
                            android:id="@+id/imageView14"
                            android:layout_weight="1"
                            android:src="@drawable/start_arrow"
                            android:paddingRight="25dp" />
                    </TableRow>
                </LinearLayout>
            </TableRow>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
