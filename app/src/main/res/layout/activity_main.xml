<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/start_bg_2">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:text="Find Game"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#cde657"
        android:id="@+id/findGame"
        android:background="#95000000"
        android:layout_above="@+id/createGame"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:text="Create Game"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#cde657"
        android:id="@+id/createGame"
        android:background="#95000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView11"
        android:src="@drawable/title2"
        android:layout_marginBottom="214dp"
        android:layout_above="@+id/findGame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:src="@drawable/coinboth"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
