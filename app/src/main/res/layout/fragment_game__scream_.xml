<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.pem.project.pem_app.Game_Run_Fragment"
    android:background="#ffadcfa5">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Scream Fight"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center"
        android:background="#3E6617"
        android:textSize="30dp"
        android:textColor="#D5F6B8" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/screamGame"
        android:visibility="invisible"
        android:orientation="vertical"
        android:background="#ffadcfa5"
        >
        <TextView
            android:layout_width="182dp"
            android:layout_height="57dp"
            android:text="Other Team Highest Scream:"
            android:id="@+id/otherScreamTxtView"
            android:layout_gravity="left|top"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start1"
            android:id="@+id/screamButton1"
            android:enabled="true"
            android:layout_gravity="center_horizontal|bottom" />

        <TextView android:layout_width="214dp"
            android:layout_height="253dp"
            android:id="@+id/screamField1"
            android:text="0"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="150dp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="57dp"
            android:text="my Highest Scream:"
            android:id="@+id/myScreamTxtView"
            android:layout_gravity="right|top"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#304135"
        android:id="@+id/screamInfoText">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView13"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/aztec"
                android:scaleType="centerCrop" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:background="#202d24"
                android:alpha="0.6">

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="THE OPPONENT"
                        android:id="@+id/textView10"
                        android:textColor="#ff84ea29"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="FIGHT"
                        android:id="@+id/textView11"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

            </TableRow>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="327dp"
            android:layout_gravity="bottom"
            android:layout_weight="6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="YOU ARE NOT ALONE."
                android:id="@+id/textView8"
                android:paddingLeft="25dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="25dp"
                android:textColor="#FF0066" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On your journey through the jungle you have met another treasure hunter.\nHe has got something that you need: The amulet's second half.\nTo fight him, scream as loud as you can!"
                android:id="@+id/textView7"
                android:gravity="left"
                android:textSize="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="70dp"
                        android:background="#202d24"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:id="@+id/startScream">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Start"
                            android:id="@+id/textView9"
                            android:background="#202d24"
                            android:layout_gravity="bottom|center_horizontal"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:textColor="#ff84ea29"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="70dp"
                            android:id="@+id/imageView14"
                            android:layout_weight="1"
                            android:src="@drawable/start_arrow"
                            android:paddingRight="25dp" />
                    </TableRow>
                </LinearLayout>
            </TableRow>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>


