<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.pem.project.pem_app.Game_Run_Fragment"
    android:background="#ffadcfa5">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Scream Fight"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center"
        android:background="#3E6617"
        android:textSize="30dp"
        android:textColor="#D5F6B8" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp"
        android:id="@+id/screamInfoText"
        android:alpha="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have woken a terrible monster from it's sleep!\nThe only way to come out of this alive is to run as fast as you can.\n
                         \nScream as loud as you can!!"
            android:id="@+id/textView4"
            android:layout_marginTop="69dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/black"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scream for your life!"
            android:id="@+id/startScream"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/screamGame"
        android:visibility="invisible"
        android:orientation="vertical"
        android:background="@drawable/game_bg_2"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Scream"
            android:id="@+id/screamButton1"
            android:enabled="true"
            android:layout_gravity="center_horizontal|bottom" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/screamField1"
            android:text="0,00"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="90dp"
            android:textStyle="normal"
            android:textIsSelectable="false" />

        <TextView
            android:layout_width="127dp"
            android:layout_height="57dp"
            android:text="Other Teeam: 0,00"
            android:id="@+id/otherScreamTxtView"
            android:layout_gravity="right|top"
            android:textColor="#cde657"
            android:textSize="20dp"
            android:visibility="invisible"
            android:textStyle="bold" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="57dp"
            android:text="My loudest Scream: 0,00"
            android:id="@+id/myScreamTxtView"
            android:layout_gravity="left|top"
            android:textColor="#cde657"
            android:textStyle="bold"
            android:textSize="20dp" />

    </FrameLayout>
</RelativeLayout>

