<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/game_bg_2"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.pem.project.pem_app.GameActivity">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/teamStates"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="6dip"
    android:paddingTop="4dip"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_above="@+id/gameButtons">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#cc000d43"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:layout_weight="0.65">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Team 1"
            android:id="@+id/textView5"
            android:autoText="false" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/team1_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/team1_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/coin_left" />

            <ImageView
                android:id="@+id/team1_keyYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/key_yellow_no_2" />

            <ImageView
                android:id="@+id/team1_keyRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/key_red_no_2" />

            <ImageView
                android:id="@+id/team1_keyGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/key_green_no_2" />

            <ImageView
                android:id="@+id/team1_keyBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/key_blue_no_2" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#cc480000"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:layout_weight="0.65">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Team 2"
            android:id="@+id/textView6" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/team2_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/team1_state"
            android:layout_weight="0.5"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/team2_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/coin_right" />

            <ImageView
                android:id="@+id/team2_keyYellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/key_yellow_no_2" />

            <ImageView
                android:id="@+id/team2_keyRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/key_red_no_2" />

            <ImageView
                android:id="@+id/team2_keyGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/key_green_no_2" />

            <ImageView
                android:id="@+id/team2_keyBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/key_blue_no_2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.01">

        <Button
            android:layout_width="100dp"
            android:text="Rescue"
            android:id="@+id/startMiniGameButton"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#cde657"
            android:background="#95000000"
            android:layout_height="65dp"
            android:layout_weight="0.2"
            android:layout_marginRight="5dp"/>

        <Button
            android:layout_width="100dp"
            android:text="Math"
            android:id="@+id/startMiniGameButton2"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#cde657"
            android:background="#95000000"
            android:layout_height="65dp"
            android:layout_weight="0.2"
            android:layout_marginRight="5dp"/>
        <Button
            android:layout_width="100dp"
            android:text="Math Runes"
            android:id="@+id/startMiniGameButton6"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#cde657"
            android:background="#95000000"
            android:layout_height="65dp"
            android:layout_weight="0.2"
            android:layout_marginRight="5dp"/>

        <Button
            android:layout_width="100dp"
            android:text="Run"
            android:id="@+id/startMiniGameButton3"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#cde657"
            android:background="#95000000"
            android:layout_height="65dp"
            android:layout_weight="0.2"
            android:layout_marginRight="5dp"/>
        <Button
            android:layout_width="100dp"
            android:text="Scream"
            android:id="@+id/startMiniGameButton4"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#cde657"
            android:background="#95000000"
            android:layout_height="65dp"
            android:layout_weight="0.2"
            android:layout_marginRight="5dp"/>
        <Button
            android:layout_width="100dp"
            android:text="Luck"
            android:id="@+id/startMiniGameButton5"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#cde657"
            android:background="#95000000"
            android:layout_height="65dp"
            android:layout_weight="0.2"/>
    </LinearLayout>

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameButtons"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:paddingBottom="6dip"
    android:paddingTop="4dip">

    <Button
        android:id="@+id/scanQRButton"
        android:layout_width="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:layout_weight="0.5"
        android:text="Scan QR-code"
        android:layout_height="65dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#cde657"
        android:background="#95000000" />

    <Button
        android:id="@+id/fightButton"
        android:layout_width="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scanQRButton"
        android:layout_weight="0.5"
        android:text="Fight!"
        android:layout_height="65dp"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#cde657"
        android:background="#95000000"
        android:layout_marginTop="15dp"/>

</LinearLayout>

</RelativeLayout>