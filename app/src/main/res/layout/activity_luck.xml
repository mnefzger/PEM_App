<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pem.project.pem_app.LuckActivity"
    android:background="@drawable/luck_bg">

    <TextView
        android:text="You've come to a parting of ways. \n No one knows what awaits you around the corner, so leave your fate to chance and chose the path you want to follow."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/luckText"
        android:textSize="22dp"
        android:textColor="#cde657"
        android:textStyle="bold"
        android:background="#85000000"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingTop="4dip"
        android:paddingBottom="6dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/luckText"
        android:background="#85000000">

        <ImageButton
            android:id="@+id/luckPath1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:layout_below="@+id/luckText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="42dp"
            android:src="@drawable/luck_arrow_left"
            android:background="@null"
            />

        <ImageButton
            android:id="@+id/luckPath2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:layout_below="@+id/luckText"
            android:layout_marginTop="42dp"
            android:layout_toRightOf="@+id/luckPath1"
            android:layout_toEndOf="@+id/luckPath1"
            android:src="@drawable/luck_arrow_up"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/luckPath3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:layout_below="@+id/luckText"
            android:layout_marginTop="42dp"
            android:layout_toRightOf="@+id/luckPath2"
            android:layout_toEndOf="@+id/luckPath2"
            android:src="@drawable/luck_arrow_right"
            android:background="@null"/>

    </LinearLayout>

    <Button
        android:id="@+id/luckDone"
        android:text="Continue your journey"
        android:state_enabled="false"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/luckText"
        android:visibility="invisible"
        android:background="#cde657"
        android:textSize="22dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

</RelativeLayout>
