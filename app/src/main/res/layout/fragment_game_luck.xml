<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pem.project.pem_app.Game_Luck_Fragment"
    android:background="@drawable/luck_bg">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#85000000">

        <TextView
            android:text="Choose your path!"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/luckText"
            android:textSize="25dp"
            android:textColor="#cde657"
            android:textStyle="bold"
            android:padding="25dp"
            android:gravity="center"
            android:layout_weight="0.6"
            android:layout_gravity="top" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/luckText"
            android:layout_weight="0.3"
            android:layout_gravity="top"
            android:layout_marginTop="50dp">

            <ImageButton
                android:id="@+id/luckPath1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:layout_below="@+id/luckText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="42dp"
                android:src="@drawable/luck_arrow_left"
                android:background="@null"
                />

            <ImageButton
                android:id="@+id/luckPath2"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:layout_below="@+id/luckText"
                android:layout_marginTop="42dp"
                android:layout_toRightOf="@+id/luckPath1"
                android:layout_toEndOf="@+id/luckPath1"
                android:src="@drawable/luck_arrow_up"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/luckPath3"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.2"
                android:layout_below="@+id/luckText"
                android:layout_marginTop="42dp"
                android:layout_toRightOf="@+id/luckPath2"
                android:layout_toEndOf="@+id/luckPath2"
                android:src="@drawable/luck_arrow_right"
                android:background="@null" />

        </LinearLayout>

        <Button
            android:id="@+id/luckDone"
            android:text="Continue your journey"
            android:state_enabled="false"
            android:layout_width="fill_parent"
            android:visibility="invisible"
            android:layout_height="70dp"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#cde657"
            android:background="#95000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.7"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="false"
            android:layout_gravity="bottom" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#304135"
        android:id="@+id/luckInfoText">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_weight="0.6">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView13"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/luck_header"
                android:scaleType="centerCrop" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:background="#202d24"
                android:alpha="0.6">

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="THE PATH"
                        android:id="@+id/textView10"
                        android:textColor="#ff84ea29"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="LUCK"
                        android:id="@+id/textView11"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

            </TableRow>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom"
            android:layout_weight="0.4">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CHOOSE CAREFULLY."
                android:id="@+id/textView8"
                android:paddingLeft="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#FF0066"
                android:layout_weight="0.05" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="You've come to a parting of ways. \n No one knows what awaits you around the corner, so leave your fate to chance and choose the path you want to follow."
                android:id="@+id/textView7"
                android:gravity="left"
                android:textSize="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_weight="0.75" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0.2">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="70dp"
                        android:background="#202d24"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:id="@+id/startLuck">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Start"
                            android:id="@+id/textView9"
                            android:background="#202d24"
                            android:layout_gravity="bottom|center_horizontal"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:textColor="#ff84ea29"
                            android:layout_weight="1"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="70dp"
                            android:id="@+id/imageView14"
                            android:layout_weight="1"
                            android:src="@drawable/start_arrow"
                            android:paddingRight="25dp" />
                    </TableRow>
                </LinearLayout>
            </TableRow>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
