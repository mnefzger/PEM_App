<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pem.project.pem_app.Game_Rescue_Fragment"
    android:background="@drawable/pit"
    android:rowCount="5"
    android:columnCount="6"
    android:id="@+id/rescueFragment"
    android:tag="rescueFragment"
    android:padding="0dp">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="536dp"
        android:layout_gravity="left|bottom"
        android:id="@+id/theRescueLayout2"
        android:visibility="invisible"
        android:padding="0dp"
        android:paddingTop="0dp"
        android:background="@drawable/pit">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Pull!"
            android:textSize="50dp"
            android:textColor="@color/black"
            android:id="@+id/pull_text"
            android:layout_gravity="center"
            android:visibility="invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pit_rope"
            android:id="@+id/rope"
            android:layout_marginTop="0dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="532dp"
        android:layout_gravity="left|bottom"
        android:id="@+id/theRescueLayout"
        android:visibility="invisible"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Throw the rope!"
            android:id="@+id/distanceText"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_alignTop="@+id/sensorText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />
    </FrameLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="57dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Rescue"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center"
        android:background="#3E6617"
        android:textSize="35dp"
        android:textColor="#D5F6B8" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="519dp"
        android:id="@+id/endScreen"
        android:layout_gravity="center_horizontal|bottom"
        android:padding="10dp"
        android:alpha="1"
        android:visibility="invisible">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hooray!\n\nYou managed to climb out safely.\nOn the body of a dead adventurer on the bottom of the pit, you found a mysterious key..."
            android:id="@+id/endText"
            android:layout_gravity="center_horizontal|top"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Main"
            android:id="@+id/backToMain"
            android:layout_gravity="right|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="112dp"
            android:layout_height="98dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:src="@drawable/key_yellow_yes"
            android:layout_below="@+id/endText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#304135"
        android:id="@+id/theRescueIntroText"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView13"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/rope"
                android:scaleType="centerCrop" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:background="#202d24"
                android:alpha="0.6">

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="THE RESCUE"
                        android:id="@+id/textView10"
                        android:textColor="#ff84ea29"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="SKILL"
                        android:id="@+id/textView11"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

            </TableRow>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="327dp"
            android:layout_gravity="bottom"
            android:layout_weight="6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TEAMWORK IS VITAL."
                android:id="@+id/textView8"
                android:paddingLeft="25dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="25dp"
                android:textColor="#FF0066" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Partner has fallen into a pit! Only you can help him out.\nFirstly, you have to throw the rope so he can climb out.\n\nTo throw the rope, simulate the throwing motion with your phone."
                android:id="@+id/textView7"
                android:gravity="left"
                android:textSize="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="70dp"
                        android:background="#202d24"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:id="@+id/startTheRescue">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Start"
                            android:id="@+id/textView9"
                            android:background="#202d24"
                            android:layout_gravity="bottom|center_horizontal"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:textColor="#ff84ea29"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="70dp"
                            android:id="@+id/imageView14"
                            android:layout_weight="1"
                            android:src="@drawable/start_arrow"
                            android:paddingRight="25dp" />
                    </TableRow>
                </LinearLayout>
            </TableRow>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#304135"
        android:id="@+id/theRescueIntroText2"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_weight="1">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView13_2"
                android:layout_gravity="top|center_horizontal"
                android:src="@drawable/rope"
                android:scaleType="centerCrop" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:background="#202d24"
                android:alpha="0.6">

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="THE RESCUE"
                        android:id="@+id/textView10_2"
                        android:textColor="#ff84ea29"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="SKILL"
                        android:id="@+id/textView11_2"
                        android:layout_marginLeft="25dp"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

            </TableRow>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="327dp"
            android:layout_gravity="bottom"
            android:layout_weight="6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TEAMWORK IS VITAL."
                android:id="@+id/textView8_2"
                android:paddingLeft="25dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="25dp"
                android:textColor="#FF0066" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You fell into a pit!\nLuckily, your partner came to your rescue.\nYou will have to wait until your partner throws the rope so you can climb out."
                android:id="@+id/pitText"
                android:gravity="left"
                android:textSize="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="70dp"
                        android:background="#202d24"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:id="@+id/startTheRescue2"
                        android:visibility="invisible">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Start"
                            android:id="@+id/textView9_2"
                            android:background="#202d24"
                            android:layout_gravity="bottom|center_horizontal"
                            android:gravity="center_vertical|right"
                            android:paddingRight="5dp"
                            android:textColor="#ff84ea29"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="70dp"
                            android:id="@+id/imageView14_2"
                            android:layout_weight="1"
                            android:src="@drawable/start_arrow"
                            android:paddingRight="25dp" />
                    </TableRow>
                </LinearLayout>
            </TableRow>

        </LinearLayout>
    </LinearLayout>



</FrameLayout>
